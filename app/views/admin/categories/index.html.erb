<section class="admin-category-index">
<header class="page-header">
  <h1>Admin &raquo; Categories</h1>
</header>

<h3>Number of Categories : <%= @category_count %> </h3>
<div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
</div>
  <div class="panel panel-default products">
   <table class="table table-bordered">
     <thead>
       <tr>
          <th>Category</th>
          <th>Products per category</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <%= render 'category', category: category, product_num: category::products.count %>
        <% end %>
      </tbody>
   </table>
</section>

<section class="login-show">

  <header class="page-header login-header">
    <h1>Login</h1>
  </header>

  <div class="login-form">
    <%= form_tag '/login' do %>

      <div class="login-group">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="login-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</section>